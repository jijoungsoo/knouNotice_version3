<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
		android:id="@+id/notice_read" android:visibility="visible"
	android:layout_height="fill_parent" android:background="#ffffff"
	android:weightSum="1">
		<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<TextView android:layout_width="fill_parent"

		android:layout_marginTop="5dp"
			android:layout_height="wrap_content" android:text="" android:id="@+id/tvSubject"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:gravity="left" android:layout_gravity="center_vertical"
			android:textColor="#000000" />

	</LinearLayout>

	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<TextView android:layout_width="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:layout_height="wrap_content" android:text="" android:id="@+id/tvDepartment"
			android:gravity="left" android:textColor="#000000" />
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="" android:id="@+id/tvDate"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:gravity="left" android:layout_gravity="center_vertical"
			android:textColor="#000000" />
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="" android:id="@+id/tvHit"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:gravity="left" android:layout_gravity="center_vertical"
			android:textColor="#000000" />
	</LinearLayout>


	<View android:layout_width="fill_parent" android:background="#ff0000"
		android:layout_height="2dp" />

	<WebView android:id="@+id/wvContent" android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:clickable="false" android:focusable="false"
		android:scrollbars="horizontal|vertical"
		android:layout_weight="1" />


	<View android:layout_width="fill_parent" android:background="#ff0000"
		android:layout_height="2dp" />
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:visibility="visible">
		<Button android:layout_width="fill_parent"
			android:layout_weight="1" android:layout_height="wrap_content"
		 android:gravity="center_vertical|center_horizontal"
		android:layout_gravity="center_vertical|center_horizontal"
			android:visibility="gone" android:text="첨부파일" android:id="@+id/btnFileView" />
			<ToggleButton  android:layout_width="fill_parent"
				 android:gravity="center_vertical|center_horizontal"
				 	android:layout_gravity="center_vertical|center_horizontal"


			android:layout_weight="1" android:layout_height="wrap_content"
			android:text="찜" android:id="@+id/tgbtnCollection"
			android:textOn="찜" android:textOff="찜"

			></ToggleButton>
					<Button android:layout_width="fill_parent"
		 android:gravity="center_vertical|center_horizontal"
		 	android:layout_gravity="center_vertical|center_horizontal"
			android:layout_weight="1" android:layout_height="wrap_content"
			android:text="메모" android:id="@+id/btnMemo" />
		<Button android:layout_width="fill_parent"
		 android:gravity="center_vertical|center_horizontal"
		 	android:layout_gravity="center_vertical|center_horizontal"
			android:layout_weight="1" android:layout_height="wrap_content"
			android:text="닫기" android:id="@+id/btnClose" />

	</LinearLayout>
</LinearLayout>
